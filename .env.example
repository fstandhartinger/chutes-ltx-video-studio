# Chutes API key for fallback inference
CHUTES_API_KEY=

# LTX-2 chute base URL
CHUTES_LTX2_BASE_URL=https://chutes-ltx-2.chutes.ai

# Public URL for the app (used for OAuth redirect construction)
APP_URL=http://localhost:3030

# Chutes IDP OAuth app credentials
CHUTES_IDP_CLIENT_ID=
CHUTES_IDP_CLIENT_SECRET=
CHUTES_IDP_REDIRECT_URI=http://localhost:3030/auth/callback

# Session signing secret
SESSION_SECRET=change-me

# Optional: disable PKCE if IDP returns 502 when code_challenge is provided
CHUTES_IDP_DISABLE_PKCE=false
